@model ProjetoFinalEntra21.Models.Mensagem

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<div>
    <h4>Tem certeza que deseja excluir essa mensagem?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Mensagem</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Corpo)</dd>
        <dt class = "col-sm-2">Data</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Data)</dd>
    </dl>
    
    <form asp-action="Excluir">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm" /> |
        <a asp-controller="Eventos" asp-action="Detalhes" asp-route-Id="@Model.Evento.Id" class="btn btn-secondary btn-sm">Voltar</a>
    </form>
</div>
