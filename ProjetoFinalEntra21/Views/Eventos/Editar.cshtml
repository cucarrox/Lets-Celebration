@model ProjetoFinalEntra21.Models.Evento

@{
    ViewData["Title"] = "Editar";
}

<h4>Editar evento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar" asp-route-Id="@Model.Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataEvento" class="control-label"></label>
                <input asp-for="DataEvento" class="form-control" type="date"/>
                <span asp-validation-for="DataEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TipoEvento.Id" class="control-label">Tipo</label>
                <select asp-for="TipoEvento.Id" class="form-control" asp-items="ViewBag.TipoEventoId"></select>
            </div>            
            <br />
            <div class="form-group">
                <a asp-controller="Eventos" asp-action="Detalhes" asp-route-Id="@Model.Id" class="btn btn-sm btn-secondary">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success btn-sm"><i class="fas fa-save"></i>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
