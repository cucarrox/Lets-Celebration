@model ProjetoFinalEntra21.Models.Evento

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<div>
    <h4>Tem certeza que deseja excluir esse evento?</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Título</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Titulo)</dd>
        <dt class = "col-sm-2">Data</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.DataEvento)</dd>
        <dt class="col-sm-2">Tipo</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.TipoEvento.Tipo)</dd>
        <dt class="col-sm-2">Administrador</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Administrador.Nome)</dd>
        <dt class="col-sm-2">Destinatário</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Destinatario.Nome)</dd>
    </dl>
    
    <form asp-action="Excluir">
        <a asp-action="Index" class="btn btn-sm btn-secondary">Voltar</a>
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger btn-sm " />

    </form>
</div>
